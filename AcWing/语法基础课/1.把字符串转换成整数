https://www.acwing.com/problem/content/83/

class Solution {
public:
    int strToInt(string str) {
        int k=0;
        while(k<str.size()&&str[k]==' ')k++;
        long long res=0;
        int flag=1;
        
        if(k<str.size())
        {
            if(str[k]=='-')
            {
                flag=-1;
                k++;
                
            }
            else if(str[k]=='+'){
                k++;
            }
        }
        
        while(k<str.size()&&str[k]>='0'&&str[k]<='9'){
            res=res*10+(str[k]-'0');
            if(res*flag>INT_MAX)
            return INT_MAX;
            if(res*flag<INT_MIN)
            return INT_MIN;
            k++;
        }
        
        res*=flag;
        
        return res;
    }
};
